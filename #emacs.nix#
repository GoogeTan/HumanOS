{pkgs, ...}: {
	home-manager.users.zahara = { pkgs, ... }: {
		home.packages = with pkgs; [
			      jetbrains-mono
		];
		programs.emacs = {
		  enable = true;
		  package = pkgs.emacs;
		  extraPackages = epkgs: [
		    epkgs.chyla-theme
		    epkgs.intellij-theme
		  ];
		  extraConfig = ''
		    (add-to-list 'default-frame-alist '(font . "Hack-14"))
		    (load-theme 'chyla t)
		    (set-face-attribute 'default nil :font "JetBrains Mono-12")
		    (tool-bar-mode -1)
		    (menu-bar-mode -1)
		  '';
		};
	};
}
